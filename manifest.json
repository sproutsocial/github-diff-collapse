{
	"manifest_version": 2,
	"name": "Better Pull Requests",
	"version": "0.10.0",
	"permissions": [
		"storage",
		"*://*.github.com/*",
		"*://github.com/*",
		"*://*.bitbucket.org/*",
		"*://bitbucket.org/*"
	],
	"content_scripts": [
		{
			"matches": [
				"*://*.github.com/*",
				"*://github.com/*"
			],
			"js": [
				"jquery.js",
				"jquery.livequery.js",
				"github.js"
			],
			"css": [
				"github.css"
			]
		},
		{
			"matches": [
				"*://*.bitbucket.org/*",
				"*://bitbucket.org/*"
			],
			"js": [
				"jquery.js",
				"jquery.livequery.js",
				"bitbucket.js"
			],
			"css": [
				"bitbucket.css"
			]
		}
	]
}